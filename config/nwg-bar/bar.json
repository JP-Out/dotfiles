[
  {
    "label": "Bloquear",
    "exec": "hyprlock",
    "icon": "/usr/share/nwg-bar/images/x-maior/system-lock-screen.svg"
  },
  {
    "label": "Deslogar",
    "exec": "hyprctl dispatch exit",
    "icon": "/usr/share/nwg-bar/images/x-maior/system-log-out.svg"
  },
  {
    "label": "Suspender",
    "exec": "systemctl suspend",
    "icon": "/usr/share/nwg-bar/images/x-maior/system-suspend.svg"
  },
  {
    "label": "Reiniciar",
    "exec": "systemctl reboot",
    "icon": "/usr/share/nwg-bar/images/x-maior/system-reboot.svg"
  },
  {
    "label": "Desligar",
    "exec": "systemctl -i poweroff",
    "icon": "/usr/share/nwg-bar/images/x-maior/system-shutdown.svg"
  }
]
